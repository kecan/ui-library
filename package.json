{
  "name": "kc-ui-library",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "storybook": "pnpm --filter @kc-ui/storybook dev",
    "build-storybook": "pnpm --filter @kc-ui/storybook build",
    "build": "pnpm --filter @kc-ui/components build",
    "release": "semantic-release",
    "publish:components": "pnpm --filter @kc-ui/components publish",
    "prepublish": "pnpm build && pnpm test && pnpm lint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lerna": "^8.2.3",
    "lint-staged": "^15.2.2",
    "playwright": "^1.53.2",
    "prettier": "^3.2.5",
    "semantic-release": "^19.0.5",
    "vitest": "^3.2.4"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "vite": "*"
      }
    },
    "overrides": {
      "@storybook/react": "8.6.14",
      "@storybook/addon-essentials": "8.6.14",
      "@storybook/react-vite": "8.6.14",
      "storybook": "8.6.14"
    }
  }
}
